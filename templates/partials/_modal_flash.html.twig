{% set messageSuccess = app.flashes("success") %}
{% set messageError = app.flashes("error") %}


{% if messageSuccess is not empty or messageError is not empty %}
    <div class="modal-flash js-flash-modal">
        <div class="content">
            <div class="meli-end-center meli-margin-bottom-50">
            <span class="js-flash-close cross meli-txt-size20">
                X
            </span>
            </div>

            <div class="meli-center-center meli-flex-column">
                {% for message in messageSuccess %}
                    <p class="meli-margin-bottom-5">{{ message }}</p>
                {% endfor %}
                {% for message in messageError %}
                    <p class="meli-margin-bottom-5">{{ message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
